<Window x:Class="TesteXaml.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TesteXaml"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="200">
    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="Teste Random"/>
            <TextBlock Text="Primeiro" x:Name="txbPrimeiro"/>
            <TextBlock Text="Segundo" x:Name="txbSegundo"/>
            <TextBlock Text="Uptime" x:Name="txbUpTime"/>
            <Button Content="Começar" Click="Start"/>
        </StackPanel>
    </Grid>
</Window>
